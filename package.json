{
  "name": "globify",
  "version": "2.3.7",
  "description": "Run browserify and watchify with globs - even on Windows!",
  "keywords": [
    "browserify",
    "watchify",
    "glob",
    "cli"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://jstools.dev/globify",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/globify.git"
  },
  "main": "lib/index.js",
  "bin": {
    "globify": "bin/globify.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "eslint bin lib test/fixtures test/specs",
    "test": "mocha && npm run lint",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "upgrade": "npm-check -u",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm test && npm run bump"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.2.2",
    "eslint-config-modular": "^7.0.1",
    "mocha": "^6.2.0",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.1",
    "version-bump-prompt": "^5.0.5"
  },
  "dependencies": {
    "browserify": "^16.5.0",
    "commander": "^3.0.0",
    "globby": "^10.0.1",
    "mkdirp": "^0.5.1",
    "touch": "^3.1.0",
    "watchify": "^3.11.1"
  },
  "engines": {
    "node": ">=6"
  }
}
