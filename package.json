{
  "name": "globify",
  "version": "1.0.0-beta.2",
  "description": "Run browserify and watchify with globs - even on Windows!",
  "keywords": [
    "browserify",
    "watchify",
    "glob",
    "cli"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://github.com/BigstickCarpet"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/globify",
  "main": "lib/index.js",
  "bin": {
    "globify": "bin/globify.js"
  },
  "scripts": {
    "build": "jshint . --verbose && jscs . --verbose",
    "test": "istanbul cover _mocha -- --recursive tests",
    "mocha": "mocha --recursive tests",
    "upgrade": "npm-check-updates -u && npm update",
    "release": "npm run upgrade && npm run build && npm test && bump --prompt --tag --push --all && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/globify.git"
  },
  "devDependencies": {
    "istanbul": "^0.3.15",
    "coveralls": "^2.11.2",
    "mocha": "^2.2.5",
    "chai": "^3.0.0",
    "lodash": "^3.9.3",
    "sinon": "^1.15.3",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "npm-check-updates": "^1.5.1",
    "version-bump-prompt": "^1.3.1"
  },
  "dependencies": {
    "browserify": "^10.2.4",
    "glob": "^5.0.10",
    "mkdirp": "^0.5.1",
    "touch": "0.0.3",
    "watchify": "^3.2.2"
  }
}
