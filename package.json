{
  "name": "globify",
  "version": "1.1.6",
  "description": "Run browserify and watchify with globs - even on Windows!",
  "keywords": [
    "browserify",
    "watchify",
    "glob",
    "cli"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/globify",
  "main": "lib/index.js",
  "scripts": {
    "lint": "jshint . --verbose && jscs . --verbose",
    "build": "npm run lint",
    "test": "istanbul cover _mocha -- --bail --recursive tests",
    "mocha": "mocha --bail --recursive tests",
    "upgrade": "ncu --upgradeAll && npm update",
    "bump": "bump --prompt --tag --push --all",
    "release": "npm run upgrade && npm run build && npm test && npm run bump && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/globify.git"
  },
  "devDependencies": {
    "istanbul": "^0.3.17",
    "coveralls": "^2.11.3",
    "mocha": "^2.2.5",
    "chai": "^3.2.0",
    "sinon": "^1.15.4",
    "jscs": "^2.0.0",
    "jshint": "^2.8.0",
    "npm-check-updates": "^2.2.0",
    "version-bump-prompt": "^1.5.0"
  },
  "dependencies": {
    "browserify": "^11.0.1",
    "glob": "^5.0.14",
    "lodash": "^3.10.1",
    "mkdirp": "^0.5.1",
    "touch": "1.0.0",
    "watchify": "^3.3.1"
  },
  "bin": {
    "globify": "bin/globify.js"
  }
}