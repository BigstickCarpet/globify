{
  "name": "globify",
  "version": "2.0.0",
  "description": "Run browserify and watchify with globs - even on Windows!",
  "keywords": [
    "browserify",
    "watchify",
    "glob",
    "cli"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/globify",
  "main": "lib/index.js",
  "bin": {
    "globify": "bin/globify.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "eslint bin lib test/fixtures test/specs --fix",
    "test": "mocha",
    "cover": "istanbul cover _mocha",
    "upgrade": "npm-check -u",
    "bump": "bump --prompt --tag --push --all",
    "release": "npm run upgrade && npm test && npm run bump && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/globify.git"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.12.2",
    "eslint-config-modular": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "npm-check": "^5.4.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "version-bump-prompt": "^3.0.1"
  },
  "dependencies": {
    "browserify": "^13.3.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "globby": "^6.1.0",
    "mkdirp": "^0.5.1",
    "touch": "1.0.0",
    "watchify": "^3.8.0"
  },
  "engines": {
    "node": ">=4"
  }
