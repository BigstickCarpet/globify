{
  "name": "@jsdevtools/globify",
  "version": "3.0.0",
  "description": "Run browserify and watchify with globs - even on Windows!",
  "keywords": [
    "browserify",
    "watchify",
    "glob",
    "cli"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://jstools.dev/globify",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/globify.git"
  },
  "main": "lib/index.js",
  "bin": {
    "globify": "bin/globify.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage",
    "lint": "eslint bin lib test/fixtures test/specs",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm test && npm run bump"
  },
  "devDependencies": {
    "@jsdevtools/eslint-config-modular": "^8.0.0",
    "@jsdevtools/version-bump-prompt": "^6.0.2",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "mocha": "^7.1.0",
    "npm-check": "^5.9.0",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "sinon": "^9.0.0"
  },
  "dependencies": {
    "browserify": "^16.5.0",
    "commander": "^4.0.1",
    "globby": "^11.0.0",
    "touch": "^3.1.0",
    "watchify": "^3.11.1"
  },
  "engines": {
    "node": ">=10"
  }
}
